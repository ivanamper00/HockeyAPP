<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    android:elevation="20dp"
    android:layout_gravity="center_vertical"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/player_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="0dp"
        android:visibility="invisible"/>
    <TextView
        android:id="@+id/player_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="0dp"
        android:visibility="invisible"/>
    <TextView
        android:id="@+id/player_team"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="0dp"
        android:visibility="invisible"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            app:cardCornerRadius="10dp"
            android:elevation="30dp"
            app:cardBackgroundColor="#FFFFFF"
            android:layout_height="100dp"
            card_view:cardElevation="100dp"
            android:layout_margin="20dp">
        <ImageView
            android:id="@+id/team_details_player_image"
            android:layout_width="100dp"
            android:layout_height="100dp"/>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingHorizontal="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/team_details_player_name"
                android:layout_width="match_parent"

                android:fontFamily="@font/karla_bold"
                android:textSize="20sp"
                android:layout_marginVertical="5dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Name: "/>
            <TextView
                android:id="@+id/team_details_player_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:text="Jersey Number: "/>
            <TextView
                android:id="@+id/team_details_player_position"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:text="Position: "/>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>